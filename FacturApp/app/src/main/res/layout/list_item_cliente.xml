<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="50sp"
    android:paddingLeft="5sp" android:paddingRight="5sp">
    <TextView
        android:id="@+id/nombre_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5sp"
        android:gravity="left"/>
    <TextView
        android:id="@+id/telefono_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5sp"
        android:gravity="right"/>

    <TextView
        android:id="@+id/email_cliente"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/nombre_cliente"
        android:gravity="center_horizontal"/>
</RelativeLayout>