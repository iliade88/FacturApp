<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="50sp"
    android:paddingLeft="5sp" android:paddingRight="5sp">

    <TextView
        android:id="@+id/descripcion_concepto"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="wrap_content"
        android:paddingTop="5sp"
        android:layout_marginStart="5sp"
        android:gravity="left"/>

    <TextView
        android:id="@+id/precio_concepto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5sp"
        android:layout_marginStart="5sp"/>

    <TextView
        android:id="@+id/cantidad_concepto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5sp"
        android:layout_marginStart="5sp"/>

    <TextView
        android:id="@+id/precio_total_concepto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="5sp"
        android:layout_marginStart="5sp"/>
</LinearLayout>