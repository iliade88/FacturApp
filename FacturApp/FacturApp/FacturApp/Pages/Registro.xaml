<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacturApp.Pages.Registro"
             Title="Registro">
    <StackLayout>
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center">
            Email
        </Label>
        <Entry x:Name="email"></Entry>
        <Label
            HorizontalTextAlignment="Center"
            Margin="0,10,0,0">
            Contraseña
        </Label>
        <Entry IsPassword="True"></Entry>
        <Label
            HorizontalTextAlignment="Center"
            Margin="0,10,0,0">
            Repite Contraseña
        </Label>
        <Entry IsPassword="True"></Entry>
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center">
            DNI o CIF
        </Label>
        <Entry x:Name="dni"></Entry>
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center">
            Nombre completo
        </Label>
        <Entry x:Name="nombre"></Entry>
        <Button
            BackgroundColor="Black"
            TextColor="White"
            Text="Registrar"></Button>
    </StackLayout>
</ContentPage>