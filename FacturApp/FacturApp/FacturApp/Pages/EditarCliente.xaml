<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacturApp.Pages.EditarCliente"
             Title="Editar Cliente">
    <StackLayout>
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center">
            Nombre Completo
        </Label>
        <Entry x:Name="nombre"></Entry>
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center">
            DNI/CIF
        </Label>
        <Entry x:Name="dni"></Entry>
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center">
            Dirección
        </Label>
        <Entry x:Name="direccion"></Entry>
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center">
            Teléfono
        </Label>
        <Entry x:Name="telf"></Entry>
        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center">
            Email
        </Label>
        <Entry x:Name="email"></Entry>
        <Button
            BackgroundColor="Black"
            TextColor="White"
            Text="Guardar"></Button>
    </StackLayout>

</ContentPage>