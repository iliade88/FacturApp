<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacturApp.Pages.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.4*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Margin="0,10,0,0" Source="icon"></Image>
        <Button Grid.Row="1" Image="cliente" BackgroundColor="Black" Text="Clientes" TextColor="White" Clicked="btn_clientes_Clicked"></Button>
        <Button Grid.Row="2" Image="factura" BackgroundColor="Black" Text="Facturas" TextColor="White"></Button>
        <Button Grid.Row="3" Image="plantilla" BackgroundColor="Black" Text="Plantillas" TextColor="White"></Button>
        <Button Grid.Row="4" Image="backup" BackgroundColor="Black" Text="Copias de seguridad" TextColor="White"></Button>
    </Grid>
</ContentPage>